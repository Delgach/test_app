
<%@projects.each do |p| %>
<div >
	<div class="box">
		<div class= "alcent"><strong><%=p.title%></strong></div>
		<hr />
		<%p.todos.each do |t|%>
			<%@i = 1%>
			
			<div class="box-margin" name="quux[@i]" disabled>
			<label>
			<input type="checkbox">
			<%=t.text%> 
			</label>
			<br>
			<%@i = @i + 1%>
			</div>
		<%end%> 
	</div>
	<%end%>
</div>

<%= form_for :todo, url: create_todo_path, method: :get do |f| %>
  <%= f.text_field :text %>
  

<%= f.select(:project_id) do %>
  <% @projects.each do |p| %>
    <%= content_tag(:option, p.title, value: p.id) %>
  <% end %>
<% end %>

<%= f.submit "Create" %>

<script>
	$(document).ready(function(){
	  $('input').iCheck({ checkboxClass: 'icheckbox_square-blue'
		  increaseArea: '20%' 
	    });
	});
</script>



<% end %>


